import math

x1, y1, x2, y2, x3, y3 = list(map(int, input().split()))
a = math.sqrt((x2 - x1) ** 2 + (y2 - y1) ** 2)
b = math.sqrt((x3 - x1) ** 2 + (y3 - y1) ** 2)
c = math.sqrt((x2 - x3) ** 2 + (y2 - y3) ** 2)

p = (a + b + c) / 2

res = math.sqrt(p * (p - a) * (p - b) * (p - c))

print(a, b, c, p)
print(res)